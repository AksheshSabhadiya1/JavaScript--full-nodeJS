
<%- include('../partials/head') %>
</head>
<body class=" min-h-screen flex flex-col items-center text-white font-sans">
  <%- include('../partials/header') %> 
  <h1 class="text-5xl font-extrabold mt-25 drop-shadow-lg text-black">Welcome To Admin Product Cart 🛍️🛒</h1>
  <main>
    <div class="mx-auto p-8 bg-gray-50 rounded-lg shadow-2xl">
      <h3 class="text-3xl font-semibold text-center text-black mb-8">🛒 Your Registered Products</h3>
      <ul class="grid grid-cols-1 sm:grid-cols-6 gap-4">
        <% registarProducts.forEach( product => { %>
          <li class="bg-white border text-black shadow-lg rounded-2xl p-4 font-bold hover:shadow-2xl hover:bg-indigo-100 transition-transform transform hover:scale-105">
            <div class="flex flex-col items-center">
              <img src="<%= product.productImageURL %>" alt="<%= product.productName %>" class="w-32 h-32 object-cover rounded-lg mb-4 border-1 aspect-square" width="320px">
              <h4 class="text-2xl text-indigo-700 mb-2"><%= product.productName %></h4>
              <p class="text-lg text-gray-700">💰 Price: ₹<%= product.productPrice %></p>
              <p class="text-lg text-black">⭐ Rating: <%= product.productRating %>/5</p>
              <div class="flex flex-wrap space-x-2">
                <a href="/admin/edit-product/<%= product._id %>?editing=true" class="w-auto bg-blue-400 text-white border mt-2 py-2 px-3 cursor-pointer rounded-lg text-lg font-bold shadow-lg transition-transform transform hover:scale-105 hover:bg-blue-600 hover:text-white">Edit</a>
                <form action="/admin/delete-product/<%= product._id %>" method="POST">
                  <button class="bg-red-400 text-white border mt-2 py-2 px-3 cursor-pointer rounded-lg text-lg font-bold shadow-lg transition-transform transform hover:scale-105 hover:bg-red-600 hover:text-white"
                  type="submit"
                  >Delete</button>
                </form>
              </div>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>
           
  </main>
</body>
</html>