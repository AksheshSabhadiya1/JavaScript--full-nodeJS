
<%- include('partials/head') %>
</head>
<body class="bg-gradient-to-r from-blue-400 to-purple-600 min-h-screen flex flex-col items-center text-white font-sans">
  <%- include('partials/header') %> 
  <h1 class="text-5xl font-extrabold drop-shadow-lg">Welcome to Product Cart 🛍️🛒</h1>
  <main>
    <div class="max-w-3xl mx-auto p-8 bg-gray-50 rounded-lg shadow-2xl">
      <h3 class="text-3xl font-semibold text-center text-indigo-700 mb-8">🛒 Registered Products</h3>
      <ul class="grid grid-cols-1 sm:grid-cols-2 gap-6 space-y-4">
        <% registarProducts.forEach( product => { %>
          <li class="bg-white text-black shadow-lg rounded-lg p-2 font-bold text-center hover:shadow-lg hover:bg-indigo-200 transition-transform transform hover:scale-105">
            <%= product.productName %>
          </li>
        <% } ) %>
      </ul>
    </div>    
  </main>
</body>
</html>
