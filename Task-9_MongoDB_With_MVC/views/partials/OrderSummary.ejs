
<div class="flex flex-col justify-center items-center bg-blue-300 py-4 space-x-2 p-4 mt-15 rounded-lg shadow-lg w-full max-w-md mx-auto">
  <div class="mb-6 text-center">
      <p class="text-3xl font-bold text-blue-500">Order Summary</p>
  </div>
  <div class="w-full space-y-4">
    
    <% const [...price] = cartList.map(item => item.productPrice)
       const total = price.reduce( (sum, productPrice) =>Number(sum) + Number(productPrice), 0) 
    %> 
    
      <div class="flex justify-between bg-white text-black p-3 rounded-lg shadow-sm">
          <p class="text-lg">Subtotal</p>
          <p class="text-lg font-medium">₹<%= total %></p>
      </div>
      <div class="flex justify-between bg-white text-black p-3 rounded-lg shadow-sm">
          <p class="text-lg">Shipping charge</p>
          <p class="text-lg font-medium">₹5.00</p>
      </div>
      <div class="flex justify-between bg-white text-black p-3 rounded-lg shadow-sm">
          <p class="text-lg">Tax</p>
          <p class="text-lg font-medium">₹8.32</p>
      </div>
      <div class="flex justify-between bg-white text-black p-3 rounded-lg shadow-sm">
          <p class="text-lg">Order total</p>
          <p class="text-lg font-medium">₹<%= total + 5.00 + 8.32 %></p>
      </div>
   
  </div>
</div>