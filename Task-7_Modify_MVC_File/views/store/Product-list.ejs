
<%- include('../partials/head') %>
</head>
<body class=" min-h-screen flex flex-col items-center text-white font-sans">
  <%- include('../partials/header') %> 
  <main class="mt-15">
    <div class="mx-auto p-8 bg-gray-50 rounded-lg shadow-2xl">
      <h3 class="text-3xl font-semibold text-center text-black mb-8">ğŸ›’ Registered Products List</h3>
      <ul class="grid grid-cols-1 sm:grid-cols-5 gap-4">
        <% registarProducts.forEach( product => { %>
          <li class="bg-white border text-black shadow-lg rounded-2xl p-4 font-bold hover:shadow-2xl hover:bg-indigo-100 transition-transform transform hover:scale-105">
            <div class="flex flex-col items-center">
                <div>
                  <div class="absolute top-2">
                    <%- include('../partials/favourite',{product: product}) %>
                  </div>
                  <img src="<%= product.productImageURL %>" alt="<%= product.productName %>" class="w-80 h-60  object-cover rounded-lg mb-4 border-1 aspect-square">
                </div>
              <h4 class="text-2xl text-indigo-700 mb-2"><%= product.productName %></h4>
              <p class="text-lg text-gray-700">ğŸ’° Price: â‚¹<%= product.productPrice %></p>
              <p class="text-lg text-black">â­ Rating: <%= product.productRating %>/5</p>
              <div class="flex space-x-2">
                <a href="/product-details/<%= product._id %>" class="px-2 bg-blue-400 text-white border mt-2 py-2 cursor-pointer rounded-lg text-lg font-bold shadow-lg transition-transform transform hover:scale-105 hover:bg-green-400 hover:text-white" >Details</a>
                <button class="px-2 bg-blue-400 text-white border mt-2 py-2 cursor-pointer rounded-lg text-lg font-bold shadow-lg transition-transform transform hover:scale-105 hover:bg-blue-600 hover:text-white">Buy Now</button>
              </div>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>
  </main>
</body>
</html>